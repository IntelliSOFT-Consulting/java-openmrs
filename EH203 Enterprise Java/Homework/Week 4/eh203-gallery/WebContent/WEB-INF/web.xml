<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>eh203-gallery</display-name>
	<filter>
		<filter-name>ImageRefFilter</filter-name>
		<filter-class>eh203.gallery.ImageRefFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ImageRefFilter</filter-name>
		<url-pattern>*.jpg</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>GalleryServlet</servlet-name>
		<servlet-class>eh203.gallery.GalleryServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GalleryList</servlet-name>
		<servlet-class>eh203.gallery.GalleryList</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GalleryServlet</servlet-name>
		<url-pattern>/gallery.htm</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GalleryList</servlet-name>
		<url-pattern>/index.htm</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.htm</welcome-file>
	</welcome-file-list>
</web-app>
